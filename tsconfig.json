{
	"compilerOptions": {
		"strict": true,
		"moduleResolution": "node",
		"removeComments": false,
		"alwaysStrict": true,
		"pretty": true,
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],
		"sourceMap": true,
		"inlineSources": true,
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}